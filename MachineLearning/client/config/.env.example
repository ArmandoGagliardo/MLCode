# Brev Client Configuration

# ============================================
# Brev NVIDIA Instance Configuration
# ============================================

# URL dell'istanza Brev NVIDIA (o multiple separate da virgola per load balancing)
BREV_API_URL=http://localhost:8000
# BREV_INSTANCES=https://instance1.brev.dev,https://instance2.brev.dev

# API Key per autenticare richieste all'istanza Brev (se richiesta)
BREV_API_KEY=your_brev_api_key_here

# ============================================
# Server Backend Configuration
# ============================================

# API Key per autenticare i client che si connettono al backend
SERVER_API_KEY=dev-key-12345

# Host e porta del server backend
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# ============================================
# Model Configuration
# ============================================

# Modello predefinito per code generation
DEFAULT_MODEL=codebert-base

# Timeout per le richieste (secondi)
REQUEST_TIMEOUT=30

# Numero massimo di retry in caso di errore
MAX_RETRIES=3

# ============================================
# Security Settings
# ============================================

# Abilita HTTPS
ENABLE_HTTPS=false

# Abilita rate limiting
ENABLE_RATE_LIMIT=true

# Richieste massime per minuto per IP
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Logging
# ============================================

# Livello di logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# File di log
LOG_FILE=client.log

# ============================================
# Advanced Configuration
# ============================================

# Cache delle risposte
ENABLE_CACHE=true

# TTL cache in secondi
CACHE_TTL=3600

# Database per cache (redis://localhost:6379 o file)
CACHE_BACKEND=file
