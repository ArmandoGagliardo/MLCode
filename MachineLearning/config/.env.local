# ============================================================================
# Local Development Environment Variables
# ============================================================================
# Configuration for local development and testing
# Inherits from .env.common - only override what's different
# ============================================================================

# ----------------------------------------------------------------------------
# Environment Identifier
# ----------------------------------------------------------------------------
ENVIRONMENT=local

# ----------------------------------------------------------------------------
# CUDA/GPU Configuration (CPU for local development)
# ----------------------------------------------------------------------------
# Use -1 for CPU only, or specify GPU devices (0, 1, etc.)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# ----------------------------------------------------------------------------
# Training Configuration (Reduced for local testing)
# ----------------------------------------------------------------------------
DEFAULT_BATCH_SIZE=8
DEFAULT_EPOCHS=10
DEFAULT_LEARNING_RATE=5e-5
MAX_SEQ_LENGTH=256
GRADIENT_ACCUMULATION_STEPS=1
USE_AMP=false

# ----------------------------------------------------------------------------
# Dataset Configuration (Limited for local testing)
# ----------------------------------------------------------------------------
MAX_FILES_PER_REPO=20
MIN_FUNCTION_LENGTH=10
MAX_DATASET_SIZE=1000

# ----------------------------------------------------------------------------
# Web Crawling Configuration
# ----------------------------------------------------------------------------
WEB_CRAWL_MAX_PAGES=100
CRAWL_TIMEOUT=30
CRAWL_DELAY=1.5

# ----------------------------------------------------------------------------
# Storage Sync Configuration
# ----------------------------------------------------------------------------
# Disable cloud sync for local development
AUTO_SYNC_ON_STARTUP=true
AUTO_BACKUP_AFTER_TRAINING=true
AUTO_DOWNLOAD_DATASETS=false

# ----------------------------------------------------------------------------
# API Server Configuration (Local testing)
# ----------------------------------------------------------------------------
API_PORT=8000
API_HOST=127.0.0.1
ENABLE_AUTH=false
API_KEY=local_test_key

# CORS for local development
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:3000

# ----------------------------------------------------------------------------
# Performance Configuration (Conservative for local)
# ----------------------------------------------------------------------------
NUM_WORKERS=2
PIN_MEMORY=false
CUDNN_BENCHMARK=false

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------
DEBUG=false
AUTO_RELOAD=false
ENABLE_DOCS=true
ENABLE_PROFILING=false

# ----------------------------------------------------------------------------
# Logging Configuration (Verbose for debugging)
# ----------------------------------------------------------------------------
LOG_LEVEL=DEBUG
LOG_FILE=logs/local_dev.log

# ----------------------------------------------------------------------------
# Model Configuration
# ----------------------------------------------------------------------------
# Use local cache
HF_HOME=.cache/huggingface
TRANSFORMERS_OFFLINE=false

# ----------------------------------------------------------------------------
# Testing Configuration
# ----------------------------------------------------------------------------
TEST_MODE=true
SKIP_LARGE_MODELS=true
USE_SAMPLE_DATA=true

# ============================================================================
# End of Local Development Configuration
# ============================================================================