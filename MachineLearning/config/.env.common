# ============================================================================
# Common Environment Variables
# export ENVIRONMENT=local  # Linux/Mac
# oppure
# $env:ENVIRONMENT = "local"  # Windows PowerShell
# ============================================================================
# These variables are shared across all environments (local, gpu, production)
# Copy this file to .env and customize for your environment
# ============================================================================

# ----------------------------------------------------------------------------
# GitHub Configuration
# ----------------------------------------------------------------------------
# REQUIRED: GitHub personal access token for repository access
# Create at: https://github.com/settings/tokens
# Required scopes: repo (Full control of private repositories)
GITHUB_TOKEN=token

# ----------------------------------------------------------------------------
# Storage Provider Selection
# ----------------------------------------------------------------------------
# Choose your cloud storage provider for datasets and models
# Options: backblaze, wasabi, s3, cloudflare_r2, digitalocean, local
STORAGE_PROVIDER=digitalocean

# ----------------------------------------------------------------------------
# Storage Paths
# ----------------------------------------------------------------------------
# Local directories for datasets and models
LOCAL_DATASET_DIR=data/datasets
LOCAL_MODELS_DIR=models/saved

# Remote prefixes for cloud storage
REMOTE_DATASET_PREFIX=datasets
REMOTE_MODELS_PREFIX=models

# ----------------------------------------------------------------------------
# Cloud Storage Credentials (Standardized Naming)
# ----------------------------------------------------------------------------
# Configure only the provider you selected above

# Backblaze B2
BACKBLAZE_BUCKET_NAME=
BACKBLAZE_KEY_ID=
BACKBLAZE_APPLICATION_KEY=
BACKBLAZE_ENDPOINT_URL=https://s3.us-west-002.backblazeb2.com

# Wasabi
WASABI_BUCKET_NAME=
WASABI_ACCESS_KEY_ID=
WASABI_SECRET_ACCESS_KEY=
WASABI_REGION=us-east-1
WASABI_ENDPOINT_URL=https://s3.wasabisys.com

# AWS S3
AWS_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# DigitalOcean Spaces (Standardized from DO_SPACES_*)
DO_BUCKET_NAME=name
DO_ACCESS_KEY_ID=id
DO_SECRET_ACCESS_KEY=secret
DO_REGION=sfo3
DO_ENDPOINT_URL=https://sfo3.digitaloceanspaces.com

# Cloudflare R2 (Standardized from CLOUDFLARE_R2_*)
CLOUDFLARE_BUCKET_NAME=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ACCESS_KEY_ID=
CLOUDFLARE_SECRET_ACCESS_KEY=
CLOUDFLARE_ENDPOINT_URL=https://{account_id}.r2.cloudflarestorage.com

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_COLORS=true

# ----------------------------------------------------------------------------
# Model Configuration
# ----------------------------------------------------------------------------
# HuggingFace cache directory
HF_HOME=/tmp/huggingface_cache

# Disable telemetry
HF_HUB_DISABLE_TELEMETRY=1

# Download timeout for models (seconds)
HF_HUB_DOWNLOAD_TIMEOUT=300

# ============================================================================
# End of Common Configuration
# ============================================================================