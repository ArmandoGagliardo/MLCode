# =================================================================
# MACHINE LEARNING CODE EXTRACTION & TRAINING - ENVIRONMENT CONFIG
# =================================================================
#
# Copia questo file in .env e compila con i tuoi valori
# Copy this file to .env and fill in your values
#
# cp .env.example .env
#
# =================================================================

# ===========================
# GITHUB AUTHENTICATION
# ===========================
# Token per accesso a repository privati e rate limit pi√π alto
# Get token from: https://github.com/settings/tokens
# Permissions needed: repo (for private repos), public_repo (for public only)

GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# ===========================
# CLOUD STORAGE PROVIDER
# ===========================
# Scegli uno: digitalocean, backblaze, wasabi, aws, cloudflare_r2
STORAGE_PROVIDER=digitalocean

# ===========================
# DIGITALOCEAN SPACES
# ===========================
# Get from: https://cloud.digitalocean.com/account/api/spaces
DO_SPACES_KEY=your_do_spaces_access_key
DO_SPACES_SECRET=your_do_spaces_secret_key
DO_SPACES_NAME=your-space-name
DO_SPACES_REGION=nyc3

# Alternative naming (supported)
DO_BUCKET_NAME=your-space-name
DO_ACCESS_KEY_ID=your_do_spaces_access_key
DO_SECRET_ACCESS_KEY=your_do_spaces_secret_key
DO_REGION=nyc3
DO_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# ===========================
# BACKBLAZE B2
# ===========================
# Get from: https://secure.backblaze.com/app_keys.htm
BACKBLAZE_BUCKET_NAME=your-bucket-name
BACKBLAZE_KEY_ID=your_key_id
BACKBLAZE_APPLICATION_KEY=your_application_key
BACKBLAZE_ENDPOINT_URL=https://s3.us-west-004.backblazeb2.com

# ===========================
# WASABI
# ===========================
# Get from: https://console.wasabisys.com/#/access_keys
WASABI_BUCKET_NAME=your-bucket-name
WASABI_ACCESS_KEY_ID=your_access_key
WASABI_SECRET_ACCESS_KEY=your_secret_key
WASABI_REGION=us-east-1
WASABI_ENDPOINT_URL=https://s3.us-east-1.wasabisys.com

# ===========================
# AWS S3
# ===========================
# Get from: https://console.aws.amazon.com/iam/
AWS_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1

# ===========================
# CLOUDFLARE R2
# ===========================
# Get from: https://dash.cloudflare.com/
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY=your_access_key
CLOUDFLARE_R2_SECRET_KEY=your_secret_key
CLOUDFLARE_ENDPOINT_URL=https://<account_id>.r2.cloudflarestorage.com

# ===========================
# STORAGE PATHS
# ===========================
LOCAL_DATASET_DIR=data/datasets
LOCAL_MODELS_DIR=models/saved
REMOTE_DATASET_PREFIX=datasets
REMOTE_MODELS_PREFIX=models

# ===========================
# STORAGE BEHAVIOR
# ===========================
AUTO_SYNC_ON_STARTUP=true
AUTO_BACKUP_AFTER_TRAINING=true

# ===========================
# API SERVER (Optional)
# ===========================
ENABLE_AUTH=false
API_KEY=your-secret-api-key-here

# ===========================
# TRAINING CONFIGURATION (Optional)
# ===========================
LEARNING_RATE=5e-5
BATCH_SIZE=8
NUM_EPOCHS=4
MAX_LENGTH=512
USE_GPU=true
MULTI_GPU=true

# ===========================
# LOGGING (Optional)
# ===========================
LOG_LEVEL=INFO
